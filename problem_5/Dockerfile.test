FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY jest.config.js ./

# Install all dependencies (including devDependencies for testing)
RUN npm ci --ignore-scripts

# Copy source code and tests
COPY src ./src
COPY tests ./tests

# Expose no ports (test container)
# Tests will run and exit

# Default command (can be overridden)
CMD ["npm", "test"]

